<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - reserva3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/reserva3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            background: linear-gradient(135deg, #a8e6cf 0%, #dcedc1 99%, #dcedc1 100%);
            margin: 0;
            padding: 0;
            display: flex;
        }

        .sidebar {
            width: 80px;
            background-color: #1a4a5a;
            color: #ffffff;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
        }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                margin: 20px 0;
                font-size: 24px;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

                .sidebar a:hover {
                    color: #c1e1a7;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin: 20px;
        }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .navbar-toggler-icon {
            color: #000;
        }

        .header-title {
            font-size: 24px;
            color: #333;
        }

        .icon {
            font-size: 18px;
            color: #666;
            margin-right: 8px;
        }
    </style>



</head>
<body>
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home"></i>
            <span class="icon-text"></span>
        </a>
        <a href="@Url.Action("Index", "Reservas")">
            <i class="fa-solid fa-calendar-days"></i>
            <span class="icon-text"></span>
        </a>
        <a href="@Url.Action("Index", "Paquetes")">
            <i class="fa-solid fa-cube"></i>
            <span class="icon-text"></span>
        </a>
        <a href="@Url.Action("Index", "Servicios")">
            <i class="fas fa-users"></i>
            <span class="icon-text"></span>
        </a>
        <a href="@Url.Action("Index", "abonoes")">
            <i class="fa-solid fa-wallet"></i>
            <span class="icon-text"></span>
        </a>
        <a href="@Url.Action("CerrarSesion", "Home")">
            <i class="fas fa-sign-out-alt"></i>
            <span class="icon-text"></span>
        </a>
    </div>

    <div class="content">
        <header>
            <div class="header-title">@ViewData["Title"]</div>
            <div>
                <i class="fas fa-bell icon"></i>
                <i class="fas fa-user-circle icon"></i>
            </div>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,          // Habilita paginación
                "searching": true,       // Habilita la barra de búsqueda
                "ordering": true,        // Habilita el ordenamiento de columnas
                "pageLength": 5,
            });
        });
    </script>
    <script>
        @RenderSection("Scripts", required: false)
    </script>
</body>
</html>
